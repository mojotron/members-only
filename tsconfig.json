{
  "compilerOptions": {
    "target": "ES2016",
    "rootDir": "./src",
    "module": "CommonJS",
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "outDir": "dist",
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "."
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src", ".eslintrc.json"]
}
