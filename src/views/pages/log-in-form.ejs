<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="styles/main.css" />
    <title>Members Only | Basic User Auth</title>
  </head>
  <body class="w-[100vw] h-[100vh] flex flex-col bg-white">
    <%- include("../partials/header.ejs", {auth: false}) %>
    <!--  -->
    <main class="p-4 flex flex-col items-center">
      <form action="<%- actionPath %>" method="post">
        <%- include("../partials/section-heading", { display: "Log In" }) %>
        <!--  -->
        <%- include("../partials/input-field", {label: "email", nameId: "email",
        type: "email", value: values.email}) %>
        <!--  -->
        <%- include("../partials/input-field", {label: "password", nameId:
        "password", type: "password", value: values.password}) %>
        <!--  -->
        <% if(errors.length > 0) { %>
        <!--  -->
        <%- include("../partials/form-errors",{errors: errors}) %>
        <!--  -->
        <% } %>
        <!--  -->
        <%- include("../partials/cta-button", {display: "log in", type:
        "submit"}) %>
      </form>
    </main>
    <!--  -->
    <%- include("../partials/footer.ejs") %>
  </body>
</html>
