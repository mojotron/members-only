<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/styles/main.css" />
    <title>Members Only | Basic User Auth</title>
  </head>
  <body class="w-[100vw] h-[100vh] flex flex-col bg-white">
    <%- include("../partials/header.ejs", {isAuth: locals.isAuth || true}) %>
    <!--  -->
    <main class="w-full p-4 flex flex-col items-center">
      <form
        class="w-full sm:w-[500px]"
        action="<%- actionPath %>"
        method="post"
      >
        <%- include( "../partials/section-heading", { display: "Create Message"
        }) %>
        <!--  -->
        <%- include("../partials/input-field", {label: "title", nameId: "title",
        type: "text", value: values.title}) %>
        <!--  -->
        <%- include("../partials/input-field", {label: "text body", nameId:
        "text", type: "textarea", value: values.password}) %>
        <!--  -->
        <% if(errors.length > 0) { %>
        <!--  -->
        <%- include("../partials/form-errors",{errors: errors}) %>
        <!--  -->
        <% } %>
        <!--  -->
        <%- include("../partials/cta-button", {display: "create message", type:
        "submit"}) %>
      </form>
    </main>
    <!--  -->
    <%- include("../partials/footer.ejs") %>
  </body>
</html>
