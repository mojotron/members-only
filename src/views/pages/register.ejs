<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <title>Members Only | learn session auth basics</title>
  </head>
  <body class="px-8 py-16 flex flex-col gap-8 items-center bg-gray-100 text-gray-600 font-sans">
    <%- include('../partials/header', {loginBtn: false}) %>

    <form action="/register" method="post" class="flex flex-col gap-2">
      <div>
        <div class="flex flex-col text-md">
          <label for="firstName">first name</label>
          <input value="<%= inputValues.firstName %>" type="text" name="firstName" id="firstName" class="bg-gray-100 outline-none border-b border-gray-400 px-2 focus:ring focus:ring-green-300"/>
        </div>
        <% if (errors.firstName) { %>
          <p class="text-sm text-red-500"><%= errors.firstName %></p>
        <% } %>
      </div>

      <div>
        <div class="flex flex-col gap-2 text-md">
          <label for="lastName">last name</label>
          <input value="<%= inputValues.lastName %>" type="text" name="lastName" id="lastName" class="bg-gray-100 outline-none border-b border-gray-400 px-2 focus:ring focus:ring-green-300"/>
        </div>
        <% if (errors.lastName) { %>
          <p class="text-sm text-red-500"><%= errors.lastName %></p>
        <% } %>
      </div>

      <div>
        <div class="flex flex-col gap-2 text-md">
          <label for="username">username</label>
          <input value="<%= inputValues.username %>" type="text" name="username" id="username" class="bg-gray-100 outline-none border-b border-gray-400 px-2 focus:ring focus:ring-green-300"/>
        </div>
        <% if (errors.username) { %>
          <p class="text-sm text-red-500"><%= errors.username %></p>
        <% } %>
        <% if (errors.notUniqueUsername) { %>
          <p class="text-sm text-red-500"><%= errors.notUniqueUsername %></p>
        <% } %>
      </div>

      <div>
        <div class="flex flex-col gap-2 text-md">
          <label for="password">password</label>
          <input value="<%= inputValues.password %>" type="password" name="password" id="password" class="bg-gray-100 outline-none border-b border-gray-400 px-2 focus:ring focus:ring-green-300"/>
        </div>
        <% if (errors.password) { %>
          <p class="text-sm text-red-500"><%= errors.password %></p>
        <% } %>
      </div>

      <div>
        <div class="flex flex-col gap-2 text-md">
          <label for="passwordRepeat">repeat password</label>
          <input
          value="<%= inputValues.passwordRepeat %>"
            type="password"
            name="passwordRepeat"
            id="passwordRepeat"
            class="bg-gray-100 outline-none border-b border-gray-400 px-2 focus:ring focus:ring-green-500"
          />

        </div>
        <% if (errors.notEqualPasswords) { %>
          <p><%= errors.notEqualPasswords %></p>
        <% } %>
      </div>

      <button type="submit" class="mt-8 px-4 py-2 font-display font-bold text-md bg-green-500 text-gray-100 border border-gray-100 hover:border-green-500 hover:bg-gray-100 hover:text-green-500">signup</button>
    </form>

    <a href="/login" class="underline text-green-500 hover:text-gray-600">already have account, login</a>
  </body>
</html>
