<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <title>Members Only | learn session auth basics</title>
  </head>
  <body
    class=" w-full min-h-[100vh] flex justify-center"
  >
    <main class="flex flex-col justify-center items-center px-8 pt-16 pb-8 w-full md:w-[800px]">
      <h2 class="font-typewriter text-2xl text-gray-600 mb-8">Create new account</h2>

      <form action="/register" method="post" class="flex flex-col gap-2">
        <div>
          <div class="flex flex-col text-md">
            <label class="font-typewriter text-gray-600" for="firstName">first name</label>
            <input value="<%= inputValues.firstName %>" type="text" name="firstName" id="firstName" class="font-typewriter bg-gray-100 outline-none border-b border-gray-400 px-2 focus:ring focus:ring-green-300"/>
          </div>
          <% if (errors.firstName) { %>
            <p class="text-sm text-red-500 font-typewriter"><%= errors.firstName %></p>
          <% } %>
        </div>

        <div>
          <div class="flex flex-col gap-2 text-md">
            <label class="font-typewriter text-gray-600" for="lastName">last name</label>
            <input value="<%= inputValues.lastName %>" type="text" name="lastName" id="lastName" class="font-typewriter bg-gray-100 outline-none border-b border-gray-400 px-2 focus:ring focus:ring-green-300"/>
          </div>
          <% if (errors.lastName) { %>
            <p class="text-sm text-red-500 font-typewriter"><%= errors.lastName %></p>
          <% } %>
        </div>

        <div>
          <div class="flex flex-col gap-2 text-md">
            <label class="font-typewriter text-gray-600" for="username">username</label>
            <input value="<%= inputValues.username %>" type="text" name="username" id="username" class="font-typewriter bg-gray-100 outline-none border-b border-gray-400 px-2 focus:ring focus:ring-green-300"/>
          </div>
          <% if (errors.username) { %>
            <p class="text-sm text-red-500 font-typewriter"><%= errors.username %></p>
          <% } %>
          <% if (errors.notUniqueUsername) { %>
            <p class="text-sm text-red-500 font-typewriter"><%= errors.notUniqueUsername %></p>
          <% } %>
        </div>

        <div>
          <div class="flex flex-col gap-2 text-md">
            <label class="font-typewriter text-gray-600" for="password">password</label>
            <input value="<%= inputValues.password %>" type="password" name="password" id="password" class="font-typewriter bg-gray-100 outline-none border-b border-gray-400 px-2 focus:ring focus:ring-green-300"/>
          </div>
          <% if (errors.password) { %>
            <p class="text-sm text-red-500 font-typewriter"><%= errors.password %></p>
          <% } %>
        </div>

        <div>
          <div class="flex flex-col gap-2 text-md">
            <label class="font-typewriter text-gray-600" for="passwordRepeat">repeat password</label>
            <input
            value="<%= inputValues.passwordRepeat %>"
              type="password"
              name="passwordRepeat"
              id="passwordRepeat"
              class="font-typewriter bg-gray-100 outline-none border-b border-gray-400 px-2 focus:ring focus:ring-green-300"
            />

          </div>
          <% if (errors.notEqualPasswords) { %>
            <p class="text-sm text-red-500 font-typewriter"><%= errors.notEqualPasswords %></p>
          <% } %>
        </div>

        <button type="submit" class="mt-8 px-4 py-2 font-typewriter font-bold text-md bg-green-500 text-gray-100 border border-gray-100 hover:border-green-500 hover:bg-gray-100 hover:text-green-500">signup</button>
      </form>

      <a href="/login" class="my-8 font-typewriter underline text-green-500 hover:text-gray-600">already have account, login</a>

    <%- include('../partials/footer') %>
  </main>
  </body>
</html>
